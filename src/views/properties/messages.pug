extends ../layout/admin


block contenido
    //- pre=JSON.stringify(messages, null, 3)
    .py-10
        h2(class="text-2xl font-extrabold text-center")=title

        a(href="/properties/mine" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

        div(class="mx-auto max-w-4xl bg-white shadow")
            if messages.length
                ul
                    each message in messages
                        li(class="border-gray-200 border-b p-6")
                            p(class="font-bold text-gray-800") Nombre: 
                                span(class="font-normal")=message.user.name
                            p(class="font-bold text-gray-800") Email: 
                                span(class="font-normal")=message.user.email
                            p(class="font-bold text-gray-800") Mensaje: 
                                span(class="font-normal")=message.message
                            p(class="font-bold text-gray-800") Enviado: 
                                span(class="font-normal")=formatDate(message.createdAt)
            else
                p(class="text-center text-gray-600") No hay mensajes