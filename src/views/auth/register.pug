extends ../layout/index

block contenido
    //- div
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-bold=title
        
        if errores
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p(class='bg-red-600 text-white text-xs text-center p-2 mb-1 font-bold')=error.msg
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(action="/auth/signup" method="POST")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='name') Tu nombre
                        input#name.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type='text' name='name' value=user ? user.name : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='email') Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Tu Email" type='email' name='email' value=user ? user.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='password') Password
                        input#password.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Password" type='password' name='password')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='repeat-password') Repetir Password
                        input#repeat-password.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Repite tu Password" type='password' name='repeat-password')

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-sm" type="submit" value='Crear Cuenta')


                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs.mt-3(href="/auth/login") Ya tienes cuenta? Inicia Sesion
                        a.text-gray-500.text-xs.mt-4(href="/auth/forgot-password") Olvide mi password