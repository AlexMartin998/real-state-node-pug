extends ../layout/index

block contenido
    //- div
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-bold=title
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(action="" method="method")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='name') Tu nombre
                        input#name.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type='text' name='name')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='email') Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Tu Email" type='email' name='email')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='password') Password
                        input#password.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Password" type='password' name='password')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='repear-password') Repetir Password
                        input#repear-password.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Repite tu Password" type='password' name='repear-password')

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-sm" type="submit" value='Crear Cuenta')


                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs.mt-3(href="/auth/login") Ya tienes cuenta? Inicia Sesion
                        a.text-gray-500.text-xs.mt-4(href="/auth/olvide-password") Olvide mi password